    <h3 class="topic">EDIT ROOM DETAILS</h3>
    <form class="edit-room-form center" action="editRoomDetails" method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">Room ID</label>
          <input type="text" class="form-control" value="<%=room.roomId%>" name="roomId" readonly>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Room Name</label>
          <input type="text" class="form-control" value="<%=room.roomName%>" name="roomName" readonly >
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Description</label>
          <input type="text" class="form-control" value="<%=room.des%>" name="description">
        </div>


        <div class="form-group">
          <label for="exampleFormControlTextarea1">Full Description</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" aria-valuetext="<%=room.fulldescription%>" name="fullDescription"><%=room.fulldescription%></textarea>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Price</label>
            <input type="text" class="form-control" value="<%=room.price%>" name="price">
          </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info btn-md">
        </div>
      </form>
    
</body>
</html>
